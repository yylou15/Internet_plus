<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.login">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
         <children>
            <Label alignment="TOP_LEFT" text="Welcome" textAlignment="CENTER">
               <font>
                  <Font size="31.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
         <children>
            <Label text="用户名：">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <TextField fx:id="username" prefHeight="23.0" prefWidth="129.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
         <children>
            <Label text="密码：">
               <font>
                  <Font size="23.0" />
               </font></Label>
            <PasswordField fx:id="password" />
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
         <children>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="login_button" defaultButton="true" layoutX="37.0" layoutY="35.0" mnemonicParsing="false" onAction="#loginButtonClick" prefHeight="30.0" prefWidth="77.0" text="登录">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button defaultButton="true" layoutX="37.0" layoutY="35.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="77.0" text="注册">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children></HBox>
   </children>
</VBox>
